@model IEnumerable<NZWalks.UI.Models.DTO.RegionDTO>
@{
}
<h1 class="mt-3">Regions</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add region</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var walk in Model)
        {
            <tr>
                <td>@walk.Id</td>
                <td>@walk.Code</td>
                <td>@walk.Name</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Regions", new {id = walk.Id}, new {@class = "btn btn-light"})
                </td>
            </tr>
        }
    </tbody>
</table>