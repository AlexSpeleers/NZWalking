@model NZWalks.UI.Models.DTO.RegionDTO
@{
}

<h1 class="mt-3">Edit region</h1>
@if (Model is not null) 
{
    @using (Html.BeginForm("Add", "Regions", FormMethod.Post))
    {
        <div class="mt-3">
            @Html.LabelFor(m => m.Id, "Guid", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @readonly = true})
        </div>
        <div class="mt-3">
            @Html.LabelFor(m => m.Code, "Code", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
        </div>
        <div class="mt-3">
            @Html.LabelFor(m => m.Name, "Name", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div class="mt-3">
            @Html.LabelFor(m => m.RegionImageUrl, "RegionImageUrl", new { @class = "form-label" })
            @Html.TextBoxFor(m => m.RegionImageUrl, new { @class = "form-control" })
        </div>
        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit", asp-asp-controller = "Regions", asp-action = "Delete" class="btn btn-danger">Delete</button>
        </div>
    }
}